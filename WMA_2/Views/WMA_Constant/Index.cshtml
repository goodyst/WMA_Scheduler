@model IEnumerable<WMA_2.Models.WMA_Constant>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Constants</h2>

<p>
    <a asp-action="Create">Create New Constant</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConstantCategory)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
   
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConstantCategory) - @Html.DisplayFor(modelItem => item.Category.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ConstantId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ConstantId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ConstantId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
