@model WMA_2.Models.ClassTimes

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Class Times</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="DayOfWeek" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="DayOfWeek" class="form-control" asp-items="Html.GetEnumSelectList<DayOfWeek>()">
                    <option value="">Select Day Of Week</option>
                </select>
                <span asp-validation-for="DayOfWeek" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div>
                    <label asp-for="StartTimeText" class="col-md-2 control-label"></label>
                </div>
                <div class='col-sm-3'>
                    <div class="form-group">
                        <div class='input-group datepicker' id='datetimepickerStartTime'>
                            <input type='text' asp-for="StartTimeText" class="form-control timepicker" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-time"></span>
                            </span>
                        </div>
                        <span asp-validation-for="StartTimeText" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div>
                    <label asp-for="EndTimeText" class="col-md-2 control-label"></label>
                </div>
                <div class='col-sm-3'>
                    <div class="form-group">
                        <div class='input-group datepicker' id='datetimepickerEndTime'>
                            <input type='text' asp-for="EndTimeText" class="form-control timepicker" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-time"></span>
                            </span>
                        </div>
                        <span asp-validation-for="EndTimeText" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ClassType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ClassType" class="form-control" asp-items="Html.GetEnumSelectList<WMA_2.Models.ClassType>()">
                    <option value="">Select A Class Type</option>
                </select>
                <span asp-validation-for="ClassType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

